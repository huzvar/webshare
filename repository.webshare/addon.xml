<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.webshare" name="WebShare" version="0.1.0" provider-name="levik">
  <requires>
    <import addon="xbmc.addon" version="13.0.0"/>
  </requires>

  <extension point="xbmc.addon.repository" name="Kodi WebShare Addons">
    <info compressed="false">https://huzvar.github.io/webshare/addons.xml</info>
    <checksum>https://huzvar.github.io/webshare/addons.xml.md5</checksum>
    <datadir>https://huzvar.github.io/webshare/zips/</datadir>
